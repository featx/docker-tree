#!/bin/sh
set -e

if [ "${1:0:1}" = '-' ]; then
	set -- $PG_USER "$@"
fi

if [ "$1" = 'postgres' ]; then
	mkdir -p "$PG_DATA"
	chmod 700 "$PG_DATA"
	chown -R $PG_GROP:$PG_USER "$PG_DATA"

	chmod g+s /run/postgresql
	chown -R $PG_GROP:$PG_USER /run/postgresql
	if [ ! -d $PG_DATA/postgresql ]; then
		mv /tmp/* $PG_DATA/
	fi
	# look specifically for PG_VERSION, as it is expected in the DB dir
	if [ ! -s "$PG_DATA/PG_VERSION" ]; then
		eval "gosu $PG_USER initdb $POSTGRES_INITDB_ARGS"

		# check password first so we can output the warning before postgres
		# messes it up
		if [ "$POSTGRES_PASSWORD" ]; then
			pass="PASSWORD '$POSTGRES_PASSWORD'"
			authMethod=md5
		else
			# The - option suppresses leading tabs but *not* spaces. :)
			cat >&2 <<-'EOWARN'
				****************************************************
				WARNING: No password has been set for the database.
				         This will allow anyone with access to the
				         Postgres port to access your database. In
				         Docker's default configuration, this is
				         effectively any other container on the same
				         system.
				         Use "-e POSTGRES_PASSWORD=password" to set
				         it in "docker run".
				****************************************************
			EOWARN

			pass=
			authMethod=trust
		fi

		{ echo; echo "host all all 0.0.0.0/0 $authMethod"; } >> "$PG_DATA/etc/pg_hba.conf"

		# internal start of server in order to allow set-up using psql-client
		# does not listen on external TCP/IP and waits until start finishes
		gosu $PG_USER pg_ctl -D "$PG_DATA" \
			-o "-c listen_addresses='localhost'" \
			-w start

		: ${PG_USER:=postgres}
		: ${PG_DB:=$PG_USER}
		export PG_USER PG_DB

		psql=( psql -v ON_ERROR_STOP=1 )

		if [ "$PG_DB" != 'postgres' ]; then
			"${psql[@]}" --username postgres <<-EOSQL
				CREATE DATABASE "$PG_DB" ;
			EOSQL
			echo
		fi

		if [ "$PG_USER" = 'postgres' ]; then
			op='ALTER'
		else
			op='CREATE'
		fi
		"${psql[@]}" --username postgres <<-EOSQL
			$op USER "$PG_USER" WITH SUPERUSER $pass ;
		EOSQL
		echo

		psql+=( --username "$PG_USER" --dbname "$PG_DB" )

		echo
		for f in /docker-entrypoint-initdb.d/*; do
			case "$f" in
				*.sh)     echo "$0: running $f"; . "$f" ;;
				*.sql)    echo "$0: running $f"; "${psql[@]}" < "$f"; echo ;;
				*.sql.gz) echo "$0: running $f"; gunzip -c "$f" | "${psql[@]}"; echo ;;
				*)        echo "$0: ignoring $f" ;;
			esac
			echo
		done

		gosu $PG_USER pg_ctl -D "$PG_DATA" -m fast -w stop

		echo
		echo 'PostgreSQL init process complete; ready for start up.'
		echo
	fi

	exec gosu $PG_USER "$@"
fi

exec "$@"
